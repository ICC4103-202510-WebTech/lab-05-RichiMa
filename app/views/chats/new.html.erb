<h1>New Chat</h1>

<%= form_with(model: @chat) do |f| %>
  <div>
    <%= f.label :sender_id %>
    <%= f.select :sender_id, @users.map { |u| [u.email, u.id] }, include_blank: true %>
  </div> 

  <div>
    <%= f.label :receiver_id %>
    <%= f.select :receiver_id, @users.map { |u| [u.email, u.id] }, include_blank: true %>
  </div> 

  <%= f.submit 'Create Chat' %>
<% end %>

<%= link_to 'Back', chats_path %>
